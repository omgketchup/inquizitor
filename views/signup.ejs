      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
    </ul>
 
    <section class="top-bar-section">
      <ul class='right'>
        <li class="divider"></li>
        <li><a href='about'>About</a></li>
        <li class="divider"></li>
        <li><a href='support'>Support</a></li>
